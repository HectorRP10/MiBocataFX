<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.geometry.Insets?>
<VBox alignment="CENTER" spacing="20.0" style="-fx-background-color: #FFF4D9;"
      xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.mibocatafx.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <ImageView fx:id="imageView" fitHeight="200" fitWidth="300" preserveRatio="true">
        <image>
            <Image url="@../images/logoMiBocata.png" />
        </image>
    </ImageView>

    <Label text="Usuario:" />

    <TextField alignment="CENTER" maxWidth="400" />


    <Label text="Contraseña:"  />

    <PasswordField alignment="CENTER" maxWidth="400"/>


    <Button mnemonicParsing="false" text="Entrar" />
    <Hyperlink text="Recuperar contraseña" />

</VBox>

